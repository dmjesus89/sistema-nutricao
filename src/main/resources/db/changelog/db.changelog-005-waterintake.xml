<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.1.xsd">


<changeSet id="022-create-water-intake-table" author="nutrition-system">
    <createTable tableName="water_intake">
        <column name="id" type="BIGSERIAL">
            <constraints primaryKey="true" nullable="false"/>
        </column>
        <column name="user_id" type="BIGINT">
            <constraints nullable="false"/>
        </column>
        <column name="amount_ml" type="DECIMAL(8,2)">
            <constraints nullable="false"/>
        </column>
        <column name="intake_date" type="DATE">
            <constraints nullable="false"/>
        </column>
        <column name="intake_time" type="TIMESTAMP">
            <constraints nullable="false"/>
        </column>
        <column name="notes" type="VARCHAR(500)"/>
        <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
            <constraints nullable="false"/>
        </column>
        <column name="updated_at" type="TIMESTAMP"/>
    </createTable>

    <addForeignKeyConstraint baseTableName="water_intake"
                             baseColumnNames="user_id"
                             constraintName="fk_water_intake_user"
                             referencedTableName="users"
                             referencedColumnNames="id"
                             onDelete="CASCADE"/>

    <createIndex indexName="idx_water_intake_user_date" tableName="water_intake">
        <column name="user_id"/>
        <column name="intake_date"/>
    </createIndex>
</changeSet>

</databaseChangeLog>